---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import PricingCard from "@/components/pricing.astro";

const pricing = [
  {
    name: "Developer",
    price: "Free",
    popular: false,
    features: [
      "10,000 API calls/month",
      "Basic context management",
      "Standard vector search",
      "Community support",
      "Developer portal access",
    ],
    button: {
      text: "Get Started",
      link: "https://athena-developer-portal.vercel.app",
    },
  },
  {
    name: "Professional",
    price: "Usage-based",
    popular: true,
    features: [
      "Unlimited API calls",
      "Advanced context types",
      "Premium LLM models",
      "Priority support",
      "Custom integrations",
      "Analytics dashboard",
    ],
    button: {
      text: "Contact Sales",
      link: "/contact",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "Dedicated infrastructure",
      "SLA guarantees",
      "Custom deployment",
      "24/7 support",
      "Training and onboarding",
      "Advanced security",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Start free and scale with usage-based pricing. No hidden costs.
      </Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-10 mx-auto max-w-(--breakpoint-lg) mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
