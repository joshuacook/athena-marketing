---
import { getCollection } from 'astro:content';
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  return docs.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();

// Get all docs for navigation
const allDocs = await getCollection('docs', ({ data }) => {
  return data.draft !== true;
});

// Group docs by section for sidebar
const docsBySection = allDocs.reduce((acc, d) => {
  const section = d.data.section;
  if (!acc[section]) {
    acc[section] = [];
  }
  acc[section].push(d);
  return acc;
}, {} as Record<string, typeof allDocs>);

// Sort docs within each section
Object.keys(docsBySection).forEach(section => {
  docsBySection[section].sort((a, b) => a.data.order - b.data.order);
});

const sectionOrder = ['Getting Started', 'API Reference', 'Guides', 'Tutorials'];
const orderedSections = sectionOrder.filter(section => docsBySection[section]);
Object.keys(docsBySection).forEach(section => {
  if (!sectionOrder.includes(section)) {
    orderedSections.push(section);
  }
});
---

<Layout title={`${doc.data.title} - Athena Documentation`}>
  <Container>
    <div class="mx-auto max-w-7xl mt-14">
      <div class="flex gap-8">
        <!-- Sidebar -->
        <aside class="hidden lg:block w-64 flex-shrink-0">
          <div class="sticky top-8">
            <a href="/docs" class="text-lg font-semibold mb-4 block">‚Üê All Docs</a>
            <nav class="space-y-6">
              {orderedSections.map((section) => (
                <div>
                  <h3 class="font-semibold text-sm uppercase text-slate-500 mb-2">
                    {section}
                  </h3>
                  <ul class="space-y-1">
                    {docsBySection[section].map((d) => (
                      <li>
                        <a 
                          href={`/docs/${d.slug}`}
                          class={`block py-1 px-2 rounded text-sm ${
                            d.slug === doc.slug 
                              ? 'bg-slate-100 text-slate-900 font-medium' 
                              : 'text-slate-600 hover:text-slate-900 hover:bg-slate-50'
                          }`}
                        >
                          {d.data.title}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </nav>
          </div>
        </aside>

        <!-- Main content -->
        <main class="flex-1 min-w-0">
          <article class="prose prose-slate max-w-none">
            <Content />
          </article>
        </main>
      </div>
    </div>
  </Container>
</Layout>

