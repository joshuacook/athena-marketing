---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Context Management",
    description:
      "Create and organize contextual knowledge with customizable types, YAML schemas, and hierarchical relationships.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Vector Search",
    description:
      "Semantic search powered by embeddings and Firestore vector search for intelligent content discovery.",
    icon: "bx:bxs-search-alt-2",
  },
  {
    title: "LLM Integration",
    description:
      "Generate contextually aware responses using integrated OpenAI models with usage tracking and optimization.",
    icon: "bx:bxs-bot",
  },
  {
    title: "Developer Portal",
    description:
      "Comprehensive dashboard for managing applications, API keys, context types, and monitoring usage.",
    icon: "bx:bxs-dashboard",
  },
  {
    title: "API-First Design",
    description:
      "GraphQL API with authentication, rate limiting, and comprehensive documentation for seamless integration.",
    icon: "bx:bxs-data",
  },
  {
    title: "Flexible Schema",
    description:
      "Define custom metadata structures using YAML schemas with validation and type safety.",
    icon: "bx:bxs-file-find",
  },
];
---

<div id="features" class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Everything you need for intelligent applications
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Athena combines the power of AI with flexible context management, providing developers with the tools to build smarter, more contextually aware applications.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
