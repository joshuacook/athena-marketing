---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Athena AI Platform"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      AI-Powered Knowledge Management Platform
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Athena provides intelligent context management, vector search, and LLM integration through developer-friendly APIs. Build smarter applications with contextual understanding.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://athena-developer-portal.vercel.app"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-dashboard" />
        Get Started
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://athena-developer-portal.vercel.app/dashboard/documentation"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 w-4" name="bx:bxs-book" />
        View Documentation
      </Link>
    </div>
  </div>
</main>
